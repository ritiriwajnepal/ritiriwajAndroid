<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:ignore="MissingPrefix" >

    <co.ritiriwaj.android.helper.ParallaxViewPager
        android:id="@+id/appDemoPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/silhouette_blur" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            fontPath="fonts/Roboto-Bold.ttf"
            android:background="@drawable/transparent_button_selector"
            android:drawableRight="@drawable/ic_content_reply_all"
            android:paddingLeft="8dp"
            android:text="@string/skip"
            android:textColor="#3b5998" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/transparent_button_selector"
            android:src="@drawable/ic_navigation_arrow_forward" />
    </LinearLayout>

</RelativeLayout>